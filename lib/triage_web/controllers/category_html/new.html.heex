<Layouts.app flash={@flash} current_scope={@current_scope}>
  <div class="space-y-8 text-slate-900">
    <div class="space-y-2">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-sky-500">New category</p>
      <h1 class="text-3xl font-semibold tracking-tight">Tell Triage how to sort these emails</h1>
      <p class="text-slate-600">
        Categories guide how AI sorts, summarizes, and archives Gmail messages. Give it a clear name and description so every inbox stays organized.
      </p>
    </div>

    <.form
      for={@form}
      id="category-form"
      action={~p"/categories"}
      method="post"
      class="space-y-6 rounded-3xl border border-slate-200 bg-white p-6 shadow-xl shadow-slate-200/70"
    >
      <.input
        field={@form[:name]}
        type="text"
        label="Category name"
        placeholder="Investor Updates"
      />
      <.input
        field={@form[:description]}
        type="textarea"
        label="Description"
        placeholder="LP summaries, data room reminders, and anything related to capital raises."
        rows="5"
      />

      <div class="flex flex-wrap items-center gap-3">
        <.button phx-disable-with="Saving..." class="bg-sky-600 hover:bg-sky-500">
          Save category
        </.button>
        <.link href={~p"/"} class="text-sm font-semibold text-slate-500 hover:text-slate-900">
          Cancel
        </.link>
      </div>
    </.form>
  </div>
</Layouts.app>
